<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Author List</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
      }
      .container {
        width: 80%;
        margin: 20px auto;
        text-align: center;
      }
      h1 {
        /* color: #333; */
      }
      .author-list {
        display: flex;
        gap: 10px;
        justify-content: center;
        flex-wrap: wrap;
      }
      .author-card {
        background-color: #fff;
        padding: 15px;
        width: 200px;
        flex: 1;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: left;
      }
      .author-card h2 {
        margin: 0;
        color: #007bff;
        font-size: 18px;
      }
      .author-card p {
        margin: 5px 0;
        color: #666;
      }
    </style>
  </head>
  <body>
    <%- include('header') %>

    <div class="container" style="margin-top: 10rem">
      <h1>Author List</h1>
      <div class="author-list">
        <% authors.forEach((author) => { %>
        <div class="author-card">
          <a href="/authors/<%=author.id%>">
            <h2><%= author.name %></h2>
            <p><strong>ID:</strong> <%= author.id %></p>
          </a>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
