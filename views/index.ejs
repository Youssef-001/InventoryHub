<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Game Library</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
      }
      .container {
        width: 80%;
        margin: 0 auto;
      }
      h1 {
        text-align: center;
        margin-top: 20px;
      }
      .game-card {
        display: flex;
        justify-content: space-between;
        background-color: #fff;
        padding: 20px;
        margin: 10px 0;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      .game-info {
        flex: 1;
      }
      .game-info h2 {
        margin: 0;
        color: #333;
      }
      .game-info p {
        margin: 5px 0;
        color: #666;
      }
      .game-info .genre {
        font-weight: bold;
        color: #007bff;
      }
      .delete-button {
        background-color: #ff4d4d;
        color: #fff;
        border: none;
        padding: 5px;
        height: 3rem;
        width: 5rem;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
      }
      .delete-button:hover {
        background-color: #ff1a1a;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Game Library</h1>

      <!-- Game cards will be dynamically inserted here -->
      <% games.forEach((game) => { %>
      <div class="game-card">
        <div class="game-info">
          <h2><%= game.title %></h2>
          <p><strong>Author:</strong> <%= game.author_name %></p>
          <p class="genre"><strong>Genre:</strong> <%= game.genre_name %></p>
          <p><%= game.description %></p>
        </div>
        <a href="/delete/<%=game.id%>">
          <button class="delete-button"">
            Delete
          </button>
        </a>
      </div>
      <% }) %>
    </div>

    <script>
      function deleteGame(gameId) {
        // Make a request to the server to delete the game
        fetch(`/delete-game/${gameId}`, {
          method: "DELETE",
        })
          .then((response) => {
            if (response.ok) {
              // Remove the game card from the DOM
              document.querySelector(`[data-id="${gameId}"]`).remove();
            } else {
              console.error("Failed to delete the game.");
            }
          })
          .catch((error) => console.error("Error:", error));
      }
    </script>
  </body>
</html>
