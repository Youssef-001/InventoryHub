<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Game Library</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: white;
      }
      .container {
        width: 80%;
        margin: 0 auto;
      }
      h1 {
        text-align: center;
        margin-top: 20px;
      }
      .filter-section {
        text-align: center;
        margin: 20px 0;
        background-color: #eee;
      }
      .genre-button {
        /* background-color: #007bff; */
        color: #fff;
        border: none;
        padding: 10px 20px;
        margin: 5px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
        color: black;
      }
      .genre-button:hover {
        background-color: #0056b3;
      }
      /* Special "New" button style */
      .new-button {
        background-color: #28a745;
        color: #fff;
        padding: 10px 20px;
        margin: 5px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
        font-weight: bold;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
      }
      .new-button:hover {
        background-color: #218838;
      }
      .game {
        display: flex;
        justify-content: space-between;
        background-color: #fff;
        padding: 20px;
        margin: 10px 0;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        flex-direction: column;
        flex-grow: 1;
      }
      .game-info {
        flex: 1;
        padding-bottom: 2rem;
      }
      .game-info h2 {
        margin: 0;
        color: #333;
      }
      .game-info p {
        margin: 5px 0;
        color: #666;
      }
      .game-info .genre {
        font-weight: bold;
        color: #007bff;
      }
      .delete-button,
      .edit-button {
        background-color: #ff4d4d;
        color: #fff;
        border: none;
        padding: 5px;
        height: 3rem;
        width: 5rem;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
      }
      .delete-button:hover {
        background-color: #ff1a1a;
      }
      .edit-button {
        background-color: #ffc107; /* Yellow for edit button */
      }
      .edit-button:hover {
        background-color: #e0a800;
      }
      .search-input {
        padding: 8px;
        width: 200px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
        margin-top: 10px;
      }
      .search-div {
        display: flex;
        justify-content: center;
      }
      .search-input {
        padding: 10px;
        width: 18rem;
      }

      .search-button {
        background-color: #333;
        color: white;
        padding: 10px 20px;
        margin: 5px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
      }

      .image-place {
        width: 100%;
        object-fit: cover;
      }

      .game-edit {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
      }

      .game-card {
        display: flex;
        flex-direction: column;
        height: 100%;
        margin-top: 1rem;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Inventory Hub</h1>

      <!-- Genre filter buttons and New button -->
      <div class="filter-section">
        <a href="/new">
          <button class="new-button">New</button>
        </a>
        <a href="/"><button class="genre-button">All</button></a>
        <a href="/?filter=action"
          ><button class="genre-button">Action</button></a
        >
        <a href="/?filter=adventure"
          ><button class="genre-button">Adventure</button></a
        >
        <a href="/?filter=role-playing"
          ><button class="genre-button">Role-playing</button></a
        >
        <a href="/?filter=simulation"
          ><button class="genre-button">Simulation</button></a
        >
        <a href="/?filter=strategy"
          ><button class="genre-button">Strategy</button></a
        >

        <!-- Search input field below buttons -->
      </div>

      <div class="search-div">
        <form action="/" method="get" style="margin-top: 20px">
          <input
            type="text"
            name="search"
            class="search-input"
            placeholder="Search games..."
          />
          <button type="submit" class="search-button">Search</button>
        </form>
      </div>

      <!-- Game cards will be dynamically inserted here -->
      <div id="gameList">
        <% games.forEach((game) => { %>
        <div class="game-card">
          <img src=https://placehold.co/80x30 class="image-place" alt="test" />

          <div class="game">
            <div class="game-info">
              <h2><%= game.title %></h2>
              <p><strong>Author:</strong> <%= game.author_name %></p>
              <p class="genre">
                <strong>Genre:</strong> <%= game.genre_name %>
              </p>
              <p><%= game.description %></p>
            </div>
            <div class="game-edit">
              <a href="/edit/<%= game.id %>">
                <button class="edit-button">Edit</button>
              </a>
              <a href="/delete/<%= game.id %>">
                <button class="delete-button">Delete</button>
              </a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
