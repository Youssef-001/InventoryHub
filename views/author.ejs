<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Author Details</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
      }
      .container {
        width: 80%;
        margin: 50px auto;
      }

      .author-card {
        background-color: #fff;
        padding: 20px;
        margin: 0 auto;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      .author-card h2 {
        margin: 0;
        color: #007bff;
        font-size: 24px;
      }
      .author-card p {
        margin: 10px 0;
        color: #666;
      }
      .back-button {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        font-size: 14px;
      }
      .back-button:hover {
        background-color: #0056b3;
      }
      .game-list {
        margin-top: 40px;
      }
      .game-card {
        display: flex;
        background-color: #fff;
        padding: 20px;
        margin: 10px 0;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        flex-wrap: wrap;
      }

      .image-cover {
        object-fit: cover;
        width: 100%;
        aspect-ratio: 16 / 5;
      }
      .game-cover {
        /* width: 120px; */
        /* height: auto; */
        border-radius: 8px;
        margin-right: 20px;
      }
      .game-info {
        /* flex: 1; */
      }
      .game-info h3 {
        margin: 0;
        color: #333;
      }
      .game-info p {
        margin: 5px 0;
        color: #666;
      }
      .game-info .genre {
        font-weight: bold;
        /* color: #007bff; */
        font-weight: bold;
        color: black;
        border: 2px solid #eee;
        border-radius: 8px;
        background-color: #eee;
        padding: 6px;
        width: auto;
      }

      .game {
        /* display: flex; */
      }

      .links{
        display:flex;
        gap: 2rem;
        /* float: right; */
        margin-top: 2rem;
      }

      .nav{
        display:flex;
        gap: 2rem;
        align-items: center;
      }

    </style>
  </head>
  <body>
    <%- include('header') %>

    <!-- <header style="height: 15vh; background-color: #333;">

      <div class="nav">
        <a href="/authors"><img src="data:image/png;base64,"/></a>
        <a href="/"><img src="data:image/png;base64,"/></a>
        
      </div>
    </header> -->
    <div class="container" style="margin-top: 10rem">
      <!-- <h1>Author Details</h1> -->
      <!-- <div class="author-card">
        <h2><%= author.name %></h2>
        <p><strong>ID:</strong> <%= author.id %></p>
      </div> -->



      <!-- Games by Author -->
      <!-- Game cards will be dynamically inserted here -->
       <h2>Games By <%=author.name%></h2>
      <div id="gameList">
        <% games.forEach((game) => { %>
        <div class="game-card">
          <img
            class="image-cover"
            src="<%=game.cover%>"
            class="image-place"
            alt="test"
          />

          <div class="game">
            <div class="game-info">
              <p class="genre"">
                <strong></strong> <%= game.genre_title %>
              </p>
              <h2><%= game.game_name %></h2> 
              <!-- TODO Fix game name -->
              <p><%= game.description %></p>
            </div>
            <div class="game-edit hide">
              <div class="links">
                <a href="/edit/<%= game.id %>">
                  <img
                    src="data:image/png;base64,"
                  />
                </a>
             
              
                <a href="/delete/<%= game.id %>">
                  <img
                    src="data:image/png;base64,"
                  />
                </a>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
