<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Author Details</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
      }
      .container {
        width: 80%;
        margin: 50px auto;
        text-align: center;
      }
      h1 {
        color: #333;
      }
      .author-card {
        background-color: #fff;
        padding: 20px;
        width: 300px;
        margin: 0 auto;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      .author-card h2 {
        margin: 0;
        color: #007bff;
        font-size: 24px;
      }
      .author-card p {
        margin: 10px 0;
        color: #666;
      }
      .back-button {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        font-size: 14px;
      }
      .back-button:hover {
        background-color: #0056b3;
      }
      .game-list {
        margin-top: 40px;
        text-align: left;
      }
      .game-card {
        display: flex;
        background-color: #fff;
        padding: 20px;
        margin: 10px 0;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      .game-cover {
        width: 120px;
        height: auto;
        border-radius: 8px;
        margin-right: 20px;
      }
      .game-info {
        flex: 1;
      }
      .game-info h3 {
        margin: 0;
        color: #333;
      }
      .game-info p {
        margin: 5px 0;
        color: #666;
      }
      .game-info .genre {
        font-weight: bold;
        color: #007bff;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Author Details</h1>
      <div class="author-card">
        <h2><%= author.name %></h2>
        <p><strong>ID:</strong> <%= author.id %></p>
      </div>

      <!-- Games by Author -->
      <div class="game-list">
        <h2>Games by <%= author.name %></h2>
        <% games.forEach((game) => { %>
        <div class="game-card">
          <img
            src="<%= game.cover %>"
            alt="<%= game.title %> cover"
            class="game-cover"
          />
          <div class="game-info">
            <h3><%= game.title %></h3>
            <p><strong>Genre:</strong> <%= game.genre_name %></p>
            <p><%= game.description %></p>
          </div>
        </div>
        <% }) %>
      </div>
      <a href="/authors" class="back-button">Back to Authors</a>
    </div>
  </body>
</html>
